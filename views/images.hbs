<style>
    .row.no-gutter [class*='col-'] {
        padding-right:0;
        padding-left:0;
        height: 300px;
        overflow: hidden;
        position: relative;
    }

    .row.no-gutter .img-responsive {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transform: scale(1.1, 1.1);
        transition: all .5s;

    }

    .row.no-gutter .img-responsive:hover {
        transform: scale(1, 1);
    }

    .overlay-container ion-icon {
        font-size: 2em;
    }

    .row.no-gutter [class*='col-']:hover .overlay {

        opacity: 1;
    }

    .centered-button {
        margin: 20px auto;
    }

    #photos {
        /* Prevent vertical gaps */
        line-height: 0;

        -webkit-column-count: 3;
        -webkit-column-gap:   0px;
        -moz-column-count:    3;
        -moz-column-gap:      0px;
        column-count:         3;
        column-gap:           0px;
    }

    #photos div,
    #photos div a img,
    #photos div a {
        /* Just in case there are inline attributes */
        width: 100% !important;
        height: auto !important;
    }

    #photos div {
        overflow: hidden;
    }

    #photos div a img {
        transform: scale(1.02, 1.02);
        transition: all .5s;
    }

    #photos div:hover a img {
        transform: scale(1, 1);
    }

    .home span {
        transition: all .5s;
    }

    .home:hover span{
        opacity: .8;
    }
</style>
<section id="images">
    <a href="/public/" class="home"><span class="uk-margin-small-right back-icon uk-text-primary uk-text-background" uk-icon="icon: home; ratio: 2"></span></a>
    <h2>obrázky</h2>

    <div class="container-fluid">
        <div uk-filter="target: .js-filter">

            <ul class="uk-subnav uk-subnav-pill">
                <li class="uk-active" uk-filter-control><a href="#">Všechny</a></li>
                {{# each classYears}}
                    <li uk-filter-control=".tag-{{this}}year"><a href="#">{{this}}. ročník</a></li>
                {{/each}}
            </ul>

            <div id="photos" class="js-filter">
                {{# each images}}
                    {{#if data}}
                        <div class="tag-{{classYear}}year">
                            <a data-fancybox="gallery" href="data:image/jpg;base64,{{data}}">
                                <img src="data:image/jpg;base64,{{data}}" alt="">
                            </a>
                        </div>

                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
    <h2>videa</h2>
    <div class="container-fluid">
        <div id="videos">
            <div class="uk-child-width-1-2@s uk-child-width-1-3@m" uk-grid >
            {{# each videos}}
                <div>
                    <a href="{{url}}" style="color: inherit; text-decoration: none;" target="_blank" >
                        <div class="uk-card uk-card-default uk-card-hover rounder-corners">
                            <div class="uk-card-media-top">

                                <div class="uk-overflow-hidden">
                                    <img src="data:image/jpg;base64,{{thumbnail}}" alt="" class="thumbnail-image">
                                </div>

                            </div>
                            <div class="uk-card-body">
                                <h2 class="uk-card-title">{{title}}</h2>
                                <code class="uk-text-primary">#video</code>
                            </div>
                        </div>
                    </a>
                </div>
            {{/each}}
            </div>
        </div>
    </div>
</section>


