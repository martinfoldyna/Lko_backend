<section id="images">
    <p class="small-site-nav"><a href="/">Nástěnka</a> / Multimédia</p>
<!--    <a href="/" class="home"><span class="uk-margin-small-right back-icon uk-text-primary uk-text-background" uk-icon="icon: home; ratio: 2"></span></a>-->
    <h2>obrázky</h2>

    <div class="container-fluid">
        <div uk-filter="target: .js-filter">

            <ul class="uk-subnav uk-subnav-pill">
                <li class="uk-active rounded-corners" uk-filter-control><a href="#">Všechny</a></li>
                {{# each imageClassYears}}
                    <li uk-filter-control=".tag-{{this}}year" class="rounded-corners"><a href="#">{{this}}. ročník</a></li>
                {{/each}}
            </ul>

<!--            <span>typ fotografie</span>-->
<!--            <ul class="uk-subnav uk-subnav-pill">-->
<!--                <li class="uk-active rounded-corners" uk-filter-control><a href="#">Všechny</a></li>-->
<!--                <li class="rounded-corners" uk-filter-control=".tag-1-year"><a href="#">portrét</a></li>-->
<!--                <li class="rounded-corners" uk-filter-control=".tag-high-key-type"><a href="#">high-key</a></li>-->

<!--            </ul>-->

            <div class="uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-4@l js-filter" uk-grid >
                {{# each images}}
                    <div class="tag-{{classYear}}year tag-high-key-type gallery-tile">
                        <a data-fancybox="gallery" data-caption="{{caption}}" href="data:image/jpg;base64,{{data}}">
                            <div class="uk-card uk-card-default uk-card-hover rounded-corners">
                                <div class="uk-card-media-top">

                                    <div class="uk-overflow-hidden">
                                        <img src="data:image/jpg;base64,{{data}}" alt="" class="thumbnail-image" style="object-fit: cover; width: 100%;">
                                    </div>

                                </div>
                                <div class="uk-card-body">
                                    <h2 class="uk-card-title">{{name}}</h2>
                                    <code class="uk-text-primary">#{{tag}}</code>
                                    {{#if classYear}}
                                        <code class="uk-text-primary">#{{classYear}}. ročník</code>
                                    {{/if}}
                                </div>
                            </div>
                        </a>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
    <h2>videa</h2>
    <div class="container-fluid">
        <div id="videos" uk-filter="target: .js-video-filter">
            <ul class="uk-subnav uk-subnav-pill">
                <li class="uk-active" uk-filter-control><a href="#">Všechny</a></li>
                {{# each videoClassYears}}
                    <li uk-filter-control=".tag-video-{{this}}year"><a href="#">{{this}}. ročník</a></li>
                {{/each}}
            </ul>

            <div class="uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-4@l js-video-filter" uk-grid >
            {{# each videos}}
                <div class="tag-video-{{classYear}}year gallery-tile">
                    <a href="{{url}}" target="_blank" >
                        <div class="uk-card uk-card-default uk-card-hover rounded-corners">
                            <div class="uk-card-media-top">

                                <div class="uk-overflow-hidden">
                                    <img src="data:image/jpg;base64,{{thumbnail}}" alt="" class="thumbnail-image" style="object-fit: cover; width: 100%;">
                                </div>

                            </div>
                            <div class="uk-card-body">
                                <h2 class="uk-card-title">{{title}}</h2>
                                <code class="uk-text-primary">#{{tag}}</code>
                                {{#if classYear}}
                                    <code class="uk-text-primary">#{{classYear}}. ročník</code>
                                {{/if}}
                            </div>
                        </div>
                    </a>
                </div>
            {{/each}}
            </div>
        </div>
    </div>
</section>


