<section id="images">
    <a href="/" class="home"><span class="uk-margin-small-right back-icon uk-text-primary uk-text-background" uk-icon="icon: home; ratio: 2"></span></a>
    <h2>obrázky</h2>

    <div class="container-fluid">
        <div uk-filter="target: .js-filter">

            <ul class="uk-subnav uk-subnav-pill">
                <li class="uk-active" uk-filter-control><a href="#">Všechny</a></li>
                {{# each imageClassYears}}
                    <li uk-filter-control=".tag-{{this}}year"><a href="#">{{this}}. ročník</a></li>
                {{/each}}
            </ul>

            <div id="photos" class="js-filter">
                {{# each images}}
                    {{#if data}}
                        <div class="tag-{{classYear}}year">
                            <a data-fancybox="gallery" href="data:image/jpg;base64,{{data}}">
                                <img src="data:image/jpg;base64,{{data}}" alt="">
                            </a>
                        </div>

                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
    <h2>videa</h2>
    <div class="container-fluid">
        <div id="videos" uk-filter="target: .js-video-filter">
            <ul class="uk-subnav uk-subnav-pill">
                <li class="uk-active" uk-filter-control><a href="#">Všechny</a></li>
                {{# each videoClassYears}}
                    <li uk-filter-control=".tag-video-{{this}}year"><a href="#">{{this}}. ročník</a></li>
                {{/each}}
            </ul>

            <div class="uk-child-width-1-2@s uk-child-width-1-3@m js-video-filter" uk-grid >
            {{# each videos}}
                <div class="tag-video-{{classYear}}year">
                    <a href="{{url}}" style="color: inherit; text-decoration: none;" target="_blank" >
                        <div class="uk-card uk-card-default uk-card-hover rounder-corners">
                            <div class="uk-card-media-top">

                                <div class="uk-overflow-hidden">
                                    <img src="data:image/jpg;base64,{{thumbnail}}" alt="" class="thumbnail-image" style="object-fit: cover; width: 100%;">
                                </div>

                            </div>
                            <div class="uk-card-body">
                                <h2 class="uk-card-title">{{title}}</h2>
                                <code class="uk-text-primary">#video</code>
                                {{#if classYear}}
                                    <code class="uk-text-primary">#{{classYear}}. ročník</code>
                                {{/if}}
                            </div>
                        </div>
                    </a>
                </div>
            {{/each}}
            </div>
        </div>
    </div>
</section>


